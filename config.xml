<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hoffman-international.hoffman-app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Sayit</name>
    <description>
        Geopositioned message boards
    </description>
    <author email="davidm@luthiersdewebs.com" href="http://luthiersdewebs.com">
        Luthiers de Webs
    </author>
    <preference name="phonegap-version" value="cli-5.1.1" />
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <gap:plugin name="org.apache.cordova.camera" version="0.2.4" />
    <gap:plugin name="org.apache.cordova.media" version="0.2.13" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.device-motion" version="0.2.10" />
    <gap:plugin name="org.apache.cordova.globalization" version="0.2.6" />
    <gap:plugin name="de.phonostar.softkeyboard-custom" version="0.1.1" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.8" />
    <gap:plugin name="org.apache.cordova.vibration" version="0.3.7" />
    <gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.8" />
    <gap:plugin name="com.boyvanderlaak.cordova.plugin.orientationchanger" version="0.1.1" />
    <gap:plugin name="org.apache.cordova.file-transfer" version="0.4.6" />
    <gap:plugin name="org.apache.cordova.file" version="1.3.1" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />
    <gap:plugin name="hu.dpal.phonegap.plugins.spinnerdialog" version="1.2.0" />
    <gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.7.5" />
    <gap:plugin name="net.yoik.cordova.plugins.screenorientation" version="1.3.1" />
    <gap:plugin name="com.jchalan.cordova.ios.disableshaketoundo" version="0.1.0" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <gap:plugin name="nl.x-services.plugins.insomnia" version="4.0.1" />
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />
    <gap:plugin name="nl.x-services.plugins.backgroundaudio" version="1.0.0" />
    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <true/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="handset" />
    <gap:config-file platform="android" parent="/manifest">
        <supports-screens
        android:xlargeScreens="false" 
        android:largeScreens="false" 
        android:smallScreens="false" />
    </gap:config-file>
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="iosPersistentFileLocation" value="Compatibility" />
	
    <icon src="icon.png" />
    <icon src="icons/ios/29.png"   gap:platform="ios"          width="29" height="29" />
    <icon src="icons/ios/40.png"   gap:platform="ios"          width="40" height="40" />
    <icon src="icons/ios/50.png"   gap:platform="ios"          width="50" height="50" />
    <icon src="icons/ios/57.png"   gap:platform="ios"          width="57" height="57" />
    <icon src="icons/ios/58.png"   gap:platform="ios"          width="58" height="58" />
    <icon src="icons/ios/60.png"   gap:platform="ios"          width="60" height="60" />
    <icon src="icons/ios/72.png"   gap:platform="ios"          width="72" height="72" />
    <icon src="icons/ios/76.png"   gap:platform="ios"          width="76" height="76" />
    <icon src="icons/ios/80.png"   gap:platform="ios"          width="80" height="80" />
    <icon src="icons/ios/100.png"  gap:platform="ios"          width="100" height="100" />
    <icon src="icons/ios/114.png"  gap:platform="ios"          width="114" height="114" />
    <icon src="icons/ios/120.png"  gap:platform="ios"          width="120" height="120" />
    <icon src="icons/ios/144.png"  gap:platform="ios"          width="144" height="144" />
    <icon src="icons/ios/152.png"  gap:platform="ios"          width="152" height="152" />
    <icon src="icons/android/36.png"   gap:platform="android"      gap:qualifier="ldpi" />
    <icon src="icons/android/48.png"   gap:platform="android"      gap:qualifier="mdpi" />
    <icon src="icons/android/72.png"   gap:platform="android"      gap:qualifier="hdpi" />
    <icon src="icons/android/96.png"   gap:platform="android"      gap:qualifier="xhdpi" />



